<Window x:Class="DatesCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatesCounter"
        mc:Ignorable="d"
        Title="Date Counter" Height="400" Width="600">
    <Window.Background>
        <ImageBrush ImageSource="/Images/background3.jpg"
                Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Date Counter" FontSize="20" FontFamily="Times New Roman"  FontWeight="Bold"/>
            <TextBlock Text="The difference between 2 dates:" FontFamily="Times New Roman" FontSize="16" Margin="0, 5, 0, 10"/>

            <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 5">
                <StackPanel>
                    <TextBlock Text="The first date:" FontFamily="Times New Roman" FontWeight="DemiBold" FontSize="14" Margin="0, 0, 0, 5"/>
                    <DatePicker x:Name="datepicker1" Width="200"/>
                </StackPanel>

                <StackPanel Margin="20, 0, 0, 0">
                    <TextBlock Text="The second date:" FontFamily="Times New Roman" FontWeight="DemiBold" FontSize="14" Margin="0, 0, 0, 5"/>
                    <DatePicker x:Name="datepicker2" Width="200"/>
                </StackPanel>
            </StackPanel>
            <Button Content="Count the difference" Click="CalculateDifference_Click" Width="160" Margin="0, 5, 0, 0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border 
                x:Name="border" 
                CornerRadius="10"
                    Background="#FF9C62A1"
                    BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF9C68A1" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF9D6EA1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Button.Template>
            </Button>
            <TextBlock x:Name="resultText" Margin="0, 8, 0, 10" FontFamily="Times New Roman" FontStyle="Italic" FontSize="14"/>

            <Separator Margin="0, 8, 0, 8"/>

            <TextBlock Text="Holidays" FontFamily="Times New Roman" FontWeight="Bold" Margin="0, 0, 0, 5"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0, 5, 0, 0">
                <ComboBox Name="holidayCombobox" Width="250" />
                <Button Content="Count" Click="HolidayCalculate_Click" Margin="10, 0, 0, 0" Width="160">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="border" 
                                CornerRadius="10"
                                Background="#FF9C62A1"
                                BorderThickness="2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF9C68A1" TargetName="border"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF9D6EA1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                    </Button.Template>
                </Button>
            </StackPanel>
            <TextBlock Name="holidayResultText" FontFamily="Times New Roman" FontStyle="Italic" Margin="0,8,0,10" FontSize="14"/>

            <TextBlock Text="You can add your own special date!" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Margin="0, 5, 0, 0"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBox x:Name="holidayTextBox" Width="230"  Margin="0, 0, 10, 0" VerticalAlignment="Center"/>
                <DatePicker Text="Choose Date" Name="holidayDatePicker" Width="160"/>
            </StackPanel>
            <Button Content="Add Holiday" Click="AddHoliday_Click" Width="160" Margin="0,8,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            x:Name="border" 
                            CornerRadius="10"
                            Background="#FF9C62A1"
                            BorderThickness="2">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF9C68A1" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF9D6EA1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Button.Template>
            </Button>





        </StackPanel>


    </Grid>
</Window>
